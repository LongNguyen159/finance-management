{
  "name": "easy-sankey",
  "version": "2.0.1",
  "description": "A finance management tool for tracking expenses and managing budgets. Easy Sankey helps you create clear and simple financial visualisations without the need for Excel or technical skills. Just a few easy inputs, and you can see where your money goes!",
  "author": "Long Nguyen",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-build": "ng build --prod && electron .",
    "spell-check": "cspell \"src/**/*.ts\" \"src/**/*.html\"",
    "circular-check": "npx madge --circular --extensions ts ./",
    "deploy-mac": "electron-builder --mac",
    "deploy-win": "electron-builder --win",
    "get-version": "node -p \"require('./package.json').version\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.11",
    "@angular/cdk": "^18.2.12",
    "@angular/common": "^18.2.11",
    "@angular/compiler": "^18.2.11",
    "@angular/core": "^18.2.11",
    "@angular/forms": "^18.2.11",
    "@angular/material": "^18.2.12",
    "@angular/platform-browser": "^18.2.11",
    "@angular/platform-browser-dynamic": "^18.2.11",
    "@angular/router": "^18.2.11",
    "echarts": "^5.5.1",
    "electron-updater": "^6.3.9",
    "material-symbols": "^0.24.0",
    "mathjs": "^13.2.1",
    "ngx-echarts": "^18.0.0",
    "ngx-mat-select-search": "^7.0.7",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^11.0.3",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular/cli": "^18.2.11",
    "@angular/compiler-cli": "^18.2.11",
    "@cspell/dict-en-gb": "^4.1.51",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.7.5",
    "autoprefixer": "^10.4.20",
    "cspell": "^8.16.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "~5.4.2"
  },
  "build": {
    "appId": "com.easy-sankey.app",
    "productName": "Easy Sankey",
    "publish": {
      "provider": "github",
      "owner": "LongNguyen159",
      "repo": "finance-management",
      "private": true
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "output": "releases/v__VERSION__/${platform}/${arch}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icons/win/icon.ico"
    }
  }
}
